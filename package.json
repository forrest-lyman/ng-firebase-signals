{
  "name": "ng-firebase-signals",
  "version": "0.3.0",
  "description": "A minimal Angular library that provides reactive Firebase utilities using Angular signals",
  "homepage": "https://github.com/forrest-lyman/ng-firebase-signals",
  "repository": {
    "type": "git",
    "url": "https://github.com/forrest-lyman/ng-firebase-signals.git"
  },
  "keywords": [
    "angular",
    "firebase",
    "signals",
    "reactive",
    "typescript",
    "authentication",
    "firestore",
    "storage",
    "ai",
    "google-generative-ai"
  ],
  "author": "Forrest Lyman",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "@angular/common": "^16.0.0",
    "@angular/core": "^16.0.0",
    "firebase": "^10.0.0"
  },
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@vitest/ui": "^2.0.0",
    "jsdom": "^26.1.0",
    "tsc-alias": "^1.8.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.lib.json",
    "build:watch": "tsc -p tsconfig.lib.json --watch",
    "build:prod": "tsc -p tsconfig.lib.prod.json",
    "link": "npm run build && npm link",
    "link:watch": "npm run build:watch & npm link",
    "unlink": "npm unlink",
    "clean": "rm -rf dist out-tsc",
    "dev": "./scripts/dev-link.sh",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "deploy": "npm run clean && npm run build:prod && npm publish --access public",
    "deploy:patch": "npm version patch && npm run deploy",
    "deploy:minor": "npm version minor && npm run deploy",
    "deploy:major": "npm version major && npm run deploy",
    "prepublishOnly": "npm run clean && npm run build:prod && npm run test:run"
  },
  "sideEffects": false
}
